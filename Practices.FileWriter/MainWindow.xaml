<Window x:Class="Practices.FileWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practices.FileWriter"
        mc:Ignorable="d"
        Title="文本加密" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="5,0,5,0" Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Height="28" Padding="5,0,5,0" >写入文件</Button>
            </StackPanel>
        </StackPanel>
        <Border Grid.Row="1" Margin="5,0,5,0" BorderBrush="LightGray" BorderThickness="1">
            <TextBox TextWrapping="WrapWithOverflow" VerticalScrollBarVisibility="Hidden" BorderThickness="0"></TextBox>
        </Border>
    </Grid>
</Window>
