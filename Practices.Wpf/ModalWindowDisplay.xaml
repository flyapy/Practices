<Window x:Class="Practices.Wpf.ModalWindowDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practices.Wpf"
        mc:Ignorable="d"
        Title="ModalWindowDisplay" Height="350" Width="520">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
            <TextBox x:Name="txtShowModalWindow" Height="32" Margin="5" Width="300" VerticalContentAlignment="Center">弹出对话框</TextBox>
            <Button x:Name="btnShowModalWindow" Height="32" Margin="5" Width="64">弹出窗口</Button>
        </StackPanel>
    </Grid>
</Window>
